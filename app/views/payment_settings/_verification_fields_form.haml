- if seller_needs_verification
  %h3
    = t("stripe_accounts.form_verification.need_verification")

  = fields_for :stripe_verification_form do |form|
    .row
      .col-12
        = label_tag :personal_id_number, t("stripe_accounts.form_verification.personal_id_number")
        = form.text_field :personal_id_number
    .row
      .col-12
        = label_tag :document, t("stripe_accounts.form_verification.document")
        = form.file_field :document
